<resources>
    <style name="TagEditor"/>

    <style name="TagEditor.InputHint" parent="TextAppearance.Design.Hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    <style name="TagEditor.Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TagEditor.EditDate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">date</item>
        <item name="android:longClickable">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TagEditor.EditNumber">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:maxLines">1</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="TagEditor.EditHex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TagEditor.EditSerial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">textCapCharacters|textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TagEditor.Header">
        <item name="android:background">@drawable/light_header_dither</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TagEditor.Header.NoBackground" parent="TagEditor.Header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="SlimButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:minHeight">@dimen/button_height_min</item>
    </style>

    <declare-styleable name="BlurView">
        <attr name="blurOverlayColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="IndexFastScrollRecyclerView">
        <attr name="setIndexTextSize" format="integer" />
        <attr name="setIndexbarWidth" format="float" />
        <attr name="setIndexbarMargin" format="float" />
        <attr name="setPreviewPadding" format="integer" />
        <attr name="setPreviewTextSize" format="integer" />
        <attr name="setPreviewColor" format="color|string" />
        <attr name="setPreviewTextColor" format="color|string" />
        <attr name="setPreviewTransparentValue" format="float" />
        <attr name="setIndexBarCornerRadius" format="integer" />
        <attr name="setIndexBarTransparentValue" format="float" />
        <attr name="setIndexBarShown" format="boolean" />
        <attr name="setIndexBarColor" format="color|string" />
        <attr name="setIndexBarTextColor" format="color|string" />
        <attr name="setIndexBarHighlightTextColor" format="color|string" />
        <attr name="setIndexBarStrokeWidth" format="integer" />
        <attr name="setIndexBarStrokeColor" format="color|string" />
    </declare-styleable>

</resources>
