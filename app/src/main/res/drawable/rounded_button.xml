<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:top="4dp">
                <shape>
                    <solid android:color="@color/colorAccent"/>
                    <corners android:radius="6dp"/>
                    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true" >
        <layer-list>
            <item
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:top="4dp">
                <shape>
                    <solid android:color="@color/colorPrimaryDark"/>
                    <corners android:radius="6dp"/>
                    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" >
        <layer-list>
            <item
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:top="4dp">
                <shape>
                    <solid android:color="@color/colorPrimary"/>
                    <corners android:radius="6dp"/>
                    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" >
        <layer-list>
            <item
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:top="4dp">
                <shape>
                    <solid android:color="@color/backgroundBlack"/>
                    <corners android:radius="6dp"/>
                    <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>